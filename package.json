{
  "name": "poker-hand-history-server",
  "scripts": {
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write",
    "dev": "wrangler dev --env dev",
    "dev:remote": "wrangler dev --env dev --remote",
    "dev:prod": "wrangler dev --env prod",
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:prod": "wrangler deploy --env prod",
    "db:studio:local": "drizzle-kit studio --config drizzle-local.config.ts",
    "migration:generate:dev": "yes | drizzle-kit generate --config=drizzle-dev.config.ts",
    "migration:apply:dev": "yes | wrangler d1 migrations apply poker-hand-history-server-dev --local --env dev",
    "migration:apply:dev:remote": "yes | wrangler d1 migrations apply poker-hand-history-server-dev --remote --env dev",
    "db:reset:dev:remote": "wrangler d1 execute poker-hand-history-server-dev --remote --env dev --command \"$(bun tool/generate-drop-sql.ts)\"",
    "db:reset-and-migrate:dev:remote": "bun run db:reset:dev:remote && bun run migration:apply:dev:remote",
    "db:seed:local": "rm -rf .wrangler && bun run migration:apply:dev && bun sql/reset-local.ts && bun sql/seed-local.ts",
    "tail:dev": "wrangler tail --env dev"
  },
  "dependencies": {
    "@hono/firebase-auth": "^1.4.2",
    "@scalar/hono-api-reference": "^0.9.7",
    "better-sqlite3": "^12.1.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.3",
    "hono-openapi": "^0.4.8",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "ts-pattern": "^5.7.1",
    "ulidx": "^2.4.1",
    "vitest": "^3.2.4",
    "zod": "^3.25.67",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.47",
    "@cloudflare/workers-types": "^4.20250628.0",
    "@hono/zod-validator": "^0.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "latest",
    "@vitest/coverage-istanbul": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "miniflare": "^4.20250617.4",
    "wrangler": "^4.22.0"
  }
}